<p id="notice"><%= notice %></p>

<h1><%=  "#{MiningType.model_name.human(count: @mining_types.count)}" %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= I18n.t('activerecord.attributes.mining_type.description') %></th>
      <th><%= I18n.t('activerecord.attributes.mining_type.acronym') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to I18n.t('activerecord.attributes.actions.show'), mining_type %></td>
        <td><%= link_to I18n.t('activerecord.attributes.actions.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to I18n.t('activerecord.attributes.actions.delete'), mining_type, method: :delete, data: { confirm: I18n.t('mining_type.confirm_operation') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t('activerecord.attributes.actions.create'), new_mining_type_path, class: "btn btn-primary" %>
<%= link_to I18n.t('links.back'), welcome_index_path, class: "btn btn-primary" %>
