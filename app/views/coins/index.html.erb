<p id="notice"><%= notice %></p>

<h1><%=  "#{Coin.model_name.human(count: @coins.count)}" %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= I18n.t('activerecord.attributes.coin.description') %></th>
      <th><%= I18n.t('activerecord.attributes.coin.acronym') %></th>
      <th><%= I18n.t('activerecord.attributes.coin.image') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td> <%= image_tag coin.url_image, width: 25, heigth: 25 %></td>
        <td><%= link_to I18n.t('activerecord.attributes.actions.view'), coin %></td>
        <td><%= link_to I18n.t('activerecord.attributes.actions.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to I18n.t('activerecord.attributes.actions.delete'), coin, method: :delete, data: { confirm: I18n.t('coin.confirm_operation') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t('activerecord.attributes.actions.create'), new_coin_path, class: "btn btn-primary" %>
